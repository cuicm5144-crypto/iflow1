<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="骂我"
            android:textColor="#ffffff"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- 副标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="温柔又扎心的毒鸡汤生成器"
            android:textColor="#cccccc"
            android:textSize="16sp" />

        <!-- 输入区域 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2a2a4a"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="输入话题"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="比如：老板、周一、房贷..."
                    app:boxBackgroundColor="#1a1a3a"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#e94560"
                    app:hintTextColor="#999999">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 生成按钮 -->
        <Button
            android:id="@+id/btn_generate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_gradient"
            android:text="生成毒鸡汤"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <!-- 建议话题 -->
        <TextView
            android:id="@+id/tv_suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#2a2a4a"
            android:padding="16dp"
            android:textColor="#cccccc"
            android:textSize="14sp" />

        <!-- 结果显示 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2a2a4a"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="毒鸡汤"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1a1a3a"
                    android:minHeight="120dp"
                    android:padding="16dp"
                    android:text="点击生成按钮开始创作毒鸡汤"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 分享按钮 -->
        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_secondary_gradient"
            android:text="分享图片"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:enabled="false" />

        <!-- 底部说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用幽默解构压力 • 情绪出口+社交梗"
            android:textColor="#888888"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>